  "components": {
    "schemas": {
      "AddAnonymousPlayerToGameRequest": {
        "required": ["playerId"],
        "type": "object",
        "properties": {
          "playerId": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "AddPlayerToGameResponse": {
        "required": ["gameId", "playerId"],
        "type": "object",
        "properties": {
          "gameId": {
            "minLength": 1,
            "type": "string"
          },
          "playerId": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "ClockDto": {
        "required": ["black", "white"],
        "type": "object",
        "properties": {
          "black": {
            "type": "integer",
            "format": "int64"
          },
          "white": {
            "type": "integer",
            "format": "int64"
          }
        },
        "additionalProperties": false
      },
      "CreateGameRequest": {
        "required": ["boardSize"],
        "type": "object",
        "properties": {
          "boardSize": {
            "type": "integer",
            "format": "int32"
          },
          "timeControl": {
            "$ref": "#/components/schemas/TimeControlDto"
          }
        },
        "additionalProperties": false
      },
      "CreateGameResponse": {
        "required": ["boardSize", "gameId"],
        "type": "object",
        "properties": {
          "gameId": {
            "minLength": 1,
            "type": "string"
          },
          "boardSize": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "GetActiveGamesResponse": {
        "required": ["gameId"],
        "type": "object",
        "properties": {
          "gameId": {
            "minLength": 1,
            "type": "string"
          },
          "players": {
            "$ref": "#/components/schemas/PlayersDto"
          },
          "timeControl": {
            "$ref": "#/components/schemas/TimeControlDto"
          }
        },
        "additionalProperties": false
      },
      "GetActiveGamesResponseIEnumerablePaginatedResponse": {
        "required": ["data", "metadata"],
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GetActiveGamesResponse"
            }
          },
          "metadata": {
            "$ref": "#/components/schemas/PaginationMetadata"
          }
        },
        "additionalProperties": false
      },
      "GetAvailableGamesResponse": {
        "required": ["gameId"],
        "type": "object",
        "properties": {
          "gameId": {
            "minLength": 1,
            "type": "string"
          },
          "opponent": {
            "$ref": "#/components/schemas/ProfileDto"
          },
          "timeControl": {
            "$ref": "#/components/schemas/TimeControlDto"
          }
        },
        "additionalProperties": false
      },
      "GetAvailableGamesResponseIEnumerablePaginatedResponse": {
        "required": ["data", "metadata"],
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GetAvailableGamesResponse"
            }
          },
          "metadata": {
            "$ref": "#/components/schemas/PaginationMetadata"
          }
        },
        "additionalProperties": false
      },
      "GetGameHistoryResponse": {
        "required": [
          "boardSize",
          "gen",
          "hasBothPlayersJoined",
          "isCompleted",
          "isGameStarted",
          "movesCount",
          "movesHistory",
          "players"
        ],
        "type": "object",
        "properties": {
          "boardSize": {
            "type": "integer",
            "format": "int32"
          },
          "gen": {
            "minLength": 1,
            "type": "string"
          },
          "movesCount": {
            "type": "integer",
            "format": "int32"
          },
          "players": {
            "$ref": "#/components/schemas/PlayersDto"
          },
          "isGameStarted": {
            "type": "boolean"
          },
          "hasBothPlayersJoined": {
            "type": "boolean"
          },
          "isCompleted": {
            "type": "boolean"
          },
          "winner": {
            "type": "string",
            "nullable": true
          },
          "winningSequence": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TileDto"
            },
            "nullable": true
          },
          "movesHistory": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/components/schemas/TileDto"
            }
          },
          "timeControl": {
            "$ref": "#/components/schemas/TimeControlDto"
          },
          "clock": {
            "$ref": "#/components/schemas/ClockDto"
          }
        },
        "additionalProperties": false
      },
      "GetGamesByUsernameResponse": {
        "required": ["date", "gameId", "gen", "isCompleted", "players"],
        "type": "object",
        "properties": {
          "gameId": {
            "minLength": 1,
            "type": "string"
          },
          "players": {
            "$ref": "#/components/schemas/UsernamesDto"
          },
          "isCompleted": {
            "type": "boolean"
          },
          "winner": {
            "type": "string",
            "nullable": true
          },
          "gen": {
            "minLength": 1,
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "timeControl": {
            "$ref": "#/components/schemas/TimeControlDto"
          },
          "clock": {
            "$ref": "#/components/schemas/ClockDto"
          }
        },
        "additionalProperties": false
      },
      "GetGamesByUsernameResponseIEnumerablePaginatedResponse": {
        "required": ["data", "metadata"],
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GetGamesByUsernameResponse"
            }
          },
          "metadata": {
            "$ref": "#/components/schemas/PaginationMetadata"
          }
        },
        "additionalProperties": false
      },
      "PaginationMetadata": {
        "required": ["hasMoreItems", "totalCount"],
        "type": "object",
        "properties": {
          "hasMoreItems": {
            "type": "boolean"
          },
          "totalCount": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "PlayerDto": {
        "required": ["color", "playerId", "userName"],
        "type": "object",
        "properties": {
          "playerId": {
            "minLength": 1,
            "type": "string"
          },
          "userName": {
            "minLength": 1,
