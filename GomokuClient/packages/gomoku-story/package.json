{
  "name": "@gomoku/story",
  "description": "Gomoku UI storybook package",
  "apiVersion": "1",
  "version": "0.0.1",
  "license": "AGPL-3.0",
  "author": "Vitaly Kuprin (vitas_s@inbox.lv); Aleksandrs Vaguscenko (aleksandrs.vaguscneko@gmail.com)",
  "type": "module",
  "main": "dist/gomoku-story.cjs.js",
  "module": "dist/gomoku-story.es.js",
  "types": "dist/index.d.ts",
  "style": "./dist/style.css",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/gomoku-story.es.js",
      "require": "./dist/gomoku-story.cjs.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "scripts": {
    "lint": "eslint .",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build": "tsc && vite build",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@gomoku/tailwind-config": "*",
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-scroll-area": "^1.2.1",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-slider": "^1.2.1",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-toast": "^1.2.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.462.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.5.0-alpha.14",
    "@storybook/addon-interactions": "^8.4.6",
    "@storybook/addon-links": "^8.5.0-alpha.14",
    "@storybook/addon-styling-webpack": "^1.0.1",
    "@storybook/addons": "7.6.20",
    "@storybook/blocks": "^8.5.0-alpha.14",
    "@storybook/react": "^8.5.0-alpha.14",
    "@storybook/react-vite": "^8.4.6",
    "@storybook/test": "^8.5.0-alpha.14",
    "@vitejs/plugin-react": "^4.3.4",
    "postcss": "^8.4.49",
    "storybook": "^8.5.0-alpha.14",
    "tailwindcss": "^3.4.15",
    "vite": "^6.0.1",
    "vite-plugin-dts": "^4.3.0"
  }
}
