{
  "openapi": "3.0.1",
  "info": {
    "title": "Gomoku API v1.0",
    "description": "",
    "version": "1.0"
  },
  "paths": {
    "/api/game/{gameId}/history": {
      "get": {
        "tags": ["Game"],
        "summary": "Get game history by game id",
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "X-Version",
            "in": "header",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Content-Type",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "default": "application/json"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Information about game",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetGameHistoryResponse"
                }
              }
            }
          },
          "404": {
            "description": "Game by id not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                },
                "example": {
                  "type": "https://tools.ietf.org/html/rfc7231#section-6.5.4",
                  "title": "Not Found",
                  "status": 404
                }
              }
            }
          }
        }
      }
    },
    "/api/games/available-to-join": {
      "get": {
        "tags": ["Game"],
        "summary": "Get all games available to join",
        "parameters": [
          {
            "name": "isAnonymous",
            "in": "query",
            "required": true,
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "offset",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "X-Version",
            "in": "header",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Content-Type",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "default": "application/json"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns list of games that are available to join",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetAvailableGamesResponseIEnumerablePaginatedResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/games/active": {
      "get": {
        "tags": ["Game"],
        "summary": "Get all active games",
        "parameters": [
          {
            "name": "isAnonymous",
            "in": "query",
            "schema": {
              "type": "boolean"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "offset",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "X-Version",
            "in": "header",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Content-Type",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "default": "application/json"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns list of active games",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetActiveGamesResponseIEnumerablePaginatedResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/game": {
      "post": {
        "tags": ["Game"],
        "summary": "Create new game (supports both anonymous and authenticated users)",
        "parameters": [
          {
            "name": "X-Version",
            "in": "header",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Content-Type",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "default": "application/json"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateGameRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returns information about newly created game",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateGameResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                },
                "example": {
                  "type": "https://tools.ietf.org/html/rfc7231#section-6.5.1",
                  "title": "Bad Request",
                  "status": 400
                }
              }
            }
          }
        }
      }
    },
    "/api/game/{gameId}/join": {
      "post": {
        "tags": ["Game"],
        "summary": "Join game (supports both anonymous and authenticated users)",
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "X-Version",
            "in": "header",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Content-Type",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "default": "application/json"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Player with specified id successfully joined the game",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AddPlayerToGameResponse"
                }
              }
            }
          },
          "404": {
            "description": "Game or player with specified id not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                },
                "example": {
                  "type": "https://tools.ietf.org/html/rfc7231#section-6.5.4",
                  "title": "Not Found",
                  "status": 404
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "tags": ["Health"],
        "summary": "Health check endpoint",
        "parameters": [
          {
            "name": "X-Version",
            "in": "header",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Content-Type",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "default": "application/json"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Server is running"
          }
        }
      }
    },
    "/api/profiles/{userName}/games": {
      "get": {
        "tags": ["Profiles"],
        "summary": "Get games for specific user",
        "parameters": [
          {
            "name": "userName",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "offset",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "X-Version",
            "in": "header",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Content-Type",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "default": "application/json"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Information about user games",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetGamesByUsernameResponseIEnumerablePaginatedResponse"
                }
              }
            }
          }
        }
      }
    },
    "/gamehub/JoinGameGroup": {
      "post": {
        "tags": ["GameHub"],
        "parameters": [
          {
            "name": "gameId",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {}
      }
    },
    "/gamehub/MakeMove": {
      "post": {
        "tags": ["GameHub"],
        "parameters": [
          {
            "name": "message",
            "in": "query",
            "schema": {
              "$ref": "#/components/schemas/MakeMoveClientMessage"
            }
          }
        ],
        "responses": {},
        "security": [{}]
      }
    },
    "/gamehub/Resign": {
      "post": {
        "tags": ["GameHub"],
        "parameters": [
          {
            "name": "message",
            "in": "query",
            "schema": {
              "$ref": "#/components/schemas/ResignClientMessage"
            }
          }
        ],
        "responses": {},
        "security": [{}]
      }
    },
    "/gamehub/SendMessage": {
      "post": {
        "tags": ["GameHub"],
        "parameters": [
          {
            "name": "messageRequest",
            "in": "query",
            "schema": {
              "$ref": "#/components/schemas/ChatMessageClientMessage"
            }
          }
        ],
        "responses": {},
        "security": [{}]
      }
    }
  },
  "components": {
    "schemas": {
      "AddPlayerToGameResponse": {
        "type": "object",
        "properties": {
          "gameId": {
            "type": "string",
            "nullable": true
          },
          "playerId": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ChatMessageClientMessage": {
        "required": ["gameId", "message", "user"],
        "type": "object",
        "properties": {
          "gameId": {
            "minLength": 1,
            "type": "string"
          },
          "user": {
            "minLength": 1,
            "type": "string"
          },
          "message": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "ClockDto": {
        "required": ["black", "white"],
        "type": "object",
        "properties": {
          "black": {
            "type": "integer",
            "format": "int32"
          },
          "white": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "CreateGameRequest": {
        "required": ["boardSize"],
        "type": "object",
        "properties": {
          "boardSize": {
            "type": "integer",
            "format": "int32"
          },
          "timeControl": {
            "$ref": "#/components/schemas/TimeControlDto"
          }
        },
        "additionalProperties": false
      },
      "CreateGameResponse": {
        "type": "object",
        "properties": {
          "gameId": {
            "type": "string",
            "nullable": true
          },
          "boardSize": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "GetActiveGamesResponse": {
        "required": ["gameId"],
        "type": "object",
        "properties": {
          "gameId": {
            "minLength": 1,
            "type": "string"
          },
          "opponent": {
            "$ref": "#/components/schemas/ProfileDto"
          },
          "timeControl": {
            "$ref": "#/components/schemas/TimeControlDto"
          }
        },
        "additionalProperties": false
      },
      "GetActiveGamesResponseIEnumerablePaginatedResponse": {
        "required": ["data", "metadata"],
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GetActiveGamesResponse"
            }
          },
          "metadata": {
            "$ref": "#/components/schemas/PaginationMetadata"
          }
        },
        "additionalProperties": false
      },
      "GetAvailableGamesResponse": {
        "required": ["gameId"],
        "type": "object",
        "properties": {
          "gameId": {
            "minLength": 1,
            "type": "string"
          },
          "opponent": {
            "$ref": "#/components/schemas/ProfileDto"
          },
          "timeControl": {
            "$ref": "#/components/schemas/TimeControlDto"
          }
        },
        "additionalProperties": false
      },
      "GetAvailableGamesResponseIEnumerablePaginatedResponse": {
        "required": ["data", "metadata"],
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GetAvailableGamesResponse"
            }
          },
          "metadata": {
            "$ref": "#/components/schemas/PaginationMetadata"
          }
        },
        "additionalProperties": false
      },
      "GetGameHistoryResponse": {
        "required": [
          "boardSize",
          "gen",
          "isCompleted",
          "movesCount",
          "movesHistory",
          "players"
        ],
        "type": "object",
        "properties": {
          "boardSize": {
            "type": "integer",
            "format": "int32"
          },
          "gen": {
            "minLength": 1,
            "type": "string"
          },
          "movesCount": {
            "type": "integer",
            "format": "int32"
          },
          "players": {
            "$ref": "#/components/schemas/UsernamesDto"
          },
          "isCompleted": {
            "type": "boolean"
          },
          "winner": {
            "type": "string",
            "nullable": true
          },
          "movesHistory": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/components/schemas/TileDto"
            }
          },
          "timeControl": {
            "$ref": "#/components/schemas/TimeControlDto"
          },
          "clock": {
            "$ref": "#/components/schemas/ClockDto"
          }
        },
        "additionalProperties": false
      },
      "GetGamesByUsernameResponse": {
        "required": ["date", "gameId", "gen", "isCompleted", "players"],
        "type": "object",
        "properties": {
          "gameId": {
            "minLength": 1,
            "type": "string"
          },
          "players": {
            "$ref": "#/components/schemas/UsernamesDto"
          },
          "isCompleted": {
            "type": "boolean"
          },
          "winner": {
            "type": "string",
            "nullable": true
          },
          "gen": {
            "minLength": 1,
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date-time"
          },
          "timeControl": {
            "$ref": "#/components/schemas/TimeControlDto"
          },
          "clock": {
            "$ref": "#/components/schemas/ClockDto"
          }
        },
        "additionalProperties": false
      },
      "GetGamesByUsernameResponseIEnumerablePaginatedResponse": {
        "required": ["data", "metadata"],
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GetGamesByUsernameResponse"
            }
          },
          "metadata": {
            "$ref": "#/components/schemas/PaginationMetadata"
          }
        },
        "additionalProperties": false
      },
      "MakeMoveClientMessage": {
        "required": ["gameId", "x", "y"],
        "type": "object",
        "properties": {
          "gameId": {
            "minLength": 1,
            "type": "string"
          },
          "x": {
            "type": "integer",
            "format": "int32"
          },
          "y": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "PaginationMetadata": {
        "required": ["hasMoreItems", "totalCount"],
        "type": "object",
        "properties": {
          "hasMoreItems": {
            "type": "boolean"
          },
          "totalCount": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": {}
      },
      "ProfileDto": {
        "required": ["playerId", "userName"],
        "type": "object",
        "properties": {
          "playerId": {
            "minLength": 1,
            "type": "string"
          },
          "userName": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "ResignClientMessage": {
        "required": ["gameId"],
        "type": "object",
        "properties": {
          "gameId": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "TileDto": {
        "required": ["x", "y"],
        "type": "object",
        "properties": {
          "x": {
            "type": "integer",
            "format": "int32"
          },
          "y": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "TimeControlDto": {
        "required": ["incrementPerMove", "initialTimeInSeconds"],
        "type": "object",
        "properties": {
          "initialTimeInSeconds": {
            "type": "integer",
            "format": "int32"
          },
          "incrementPerMove": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "UsernamesDto": {
        "type": "object",
        "properties": {
          "black": {
            "type": "string",
            "nullable": true
          },
          "white": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "Enter 'Bearer' [space] and then your token in the text input below.\r\n\r\nExample: \"Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9\"",
        "scheme": "Bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "tags": [
    {
      "name": "GameHub"
    }
  ]
}
