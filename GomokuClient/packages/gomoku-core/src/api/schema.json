{
  "openapi": "3.0.1",
  "info": {
    "title": "Gomoku API v1.0",
    "description": "",
    "version": "1.0"
  },
  "paths": {
    "/api/game/{gameId}/history": {
      "get": {
        "tags": ["Game"],
        "summary": "Get game history by game id",
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "X-Version",
            "in": "header",
            "style": "simple",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Content-Type",
            "in": "header",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string",
              "default": "application/json"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Information about game",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetGameHistoryResponse"
                }
              }
            }
          },
          "404": {
            "description": "Game by id not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                },
                "example": {
                  "type": "https://tools.ietf.org/html/rfc7231#section-6.5.4",
                  "title": "Not Found",
                  "status": 404
                }
              }
            }
          }
        }
      }
    },
    "/api/games/available-to-join": {
      "get": {
        "tags": ["Game"],
        "summary": "Get all games, which are available to join",
        "parameters": [
          {
            "name": "Limit",
            "in": "query",
            "style": "form",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "Offset",
            "in": "query",
            "style": "form",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "X-Version",
            "in": "header",
            "style": "simple",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Content-Type",
            "in": "header",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string",
              "default": "application/json"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns list of games which are available to join",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetAvailableGamesResponseIEnumerablePaginatedResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/game": {
      "post": {
        "tags": ["Game"],
        "summary": "Create new game",
        "parameters": [
          {
            "name": "X-Version",
            "in": "header",
            "style": "simple",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string",
              "default": "Bearer "
            }
          },
          {
            "name": "Content-Type",
            "in": "header",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string",
              "default": "application/json"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateGameRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returns information about new created game",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateGameResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                },
                "example": {
                  "type": "https://tools.ietf.org/html/rfc7231#section-6.5.1",
                  "title": "Bad Request",
                  "status": 400
                }
              }
            }
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/api/game/{gameId}/join": {
      "post": {
        "tags": ["Game"],
        "summary": "Join game",
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "X-Version",
            "in": "header",
            "style": "simple",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string",
              "default": "Bearer "
            }
          },
          {
            "name": "Content-Type",
            "in": "header",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string",
              "default": "application/json"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Player with specified id successfully joined the game"
          },
          "404": {
            "description": "Game or player with specified id not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                },
                "example": {
                  "type": "https://tools.ietf.org/html/rfc7231#section-6.5.4",
                  "title": "Not Found",
                  "status": 404
                }
              }
            }
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/health": {
      "get": {
        "tags": ["Health"],
        "summary": "Health check endpoint",
        "parameters": [
          {
            "name": "X-Version",
            "in": "header",
            "style": "simple",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Content-Type",
            "in": "header",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string",
              "default": "application/json"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Server is running"
          }
        }
      }
    },
    "/gamehub/JoinGameGroup": {
      "post": {
        "tags": ["GameHub"],
        "parameters": [
          {
            "name": "gameId",
            "in": "query",
            "style": "form",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {}
      }
    },
    "/gamehub/MakeMove": {
      "post": {
        "tags": ["GameHub"],
        "parameters": [
          {
            "name": "makeMoveMessage",
            "in": "query",
            "style": "form",
            "schema": {
              "$ref": "#/components/schemas/MakeMoveClientMessage"
            }
          }
        ],
        "responses": {}
      }
    },
    "/gamehub/SendMessage": {
      "post": {
        "tags": ["GameHub"],
        "parameters": [
          {
            "name": "messageRequest",
            "in": "query",
            "style": "form",
            "schema": {
              "$ref": "#/components/schemas/ChatMessageClientMessage"
            }
          }
        ],
        "responses": {}
      }
    }
  },
  "components": {
    "schemas": {
      "ChatMessageClientMessage": {
        "required": ["gameId", "message", "user"],
        "type": "object",
        "properties": {
          "gameId": {
            "minLength": 1,
            "type": "string"
          },
          "user": {
            "minLength": 1,
            "type": "string"
          },
          "message": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "CreateGameRequest": {
        "required": ["boardSize"],
        "type": "object",
        "properties": {
          "boardSize": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "CreateGameResponse": {
        "required": ["gameId"],
        "type": "object",
        "properties": {
          "gameId": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "GetAvailableGamesResponse": {
        "required": ["gameId", "opponent"],
        "type": "object",
        "properties": {
          "gameId": {
            "minLength": 1,
            "type": "string"
          },
          "opponent": {
            "$ref": "#/components/schemas/PlayerDto"
          }
        },
        "additionalProperties": false
      },
      "GetAvailableGamesResponseIEnumerablePaginatedResponse": {
        "required": ["data", "metadata"],
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GetAvailableGamesResponse"
            }
          },
          "metadata": {
            "$ref": "#/components/schemas/PaginationMetadata"
          }
        },
        "additionalProperties": false
      },
      "GetGameHistoryResponse": {
        "required": ["boardSize", "movesCount", "movesHistory", "players"],
        "type": "object",
        "properties": {
          "boardSize": {
            "type": "integer",
            "format": "int32"
          },
          "movesCount": {
            "type": "integer",
            "format": "int32"
          },
          "players": {
            "$ref": "#/components/schemas/UsernamesDto"
          },
          "movesHistory": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/components/schemas/TileDto"
            }
          }
        },
        "additionalProperties": false
      },
      "MakeMoveClientMessage": {
        "required": ["gameId", "x", "y"],
        "type": "object",
        "properties": {
          "gameId": {
            "minLength": 1,
            "type": "string"
          },
          "x": {
            "type": "integer",
            "format": "int32"
          },
          "y": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "PaginationMetadata": {
        "required": ["hasMoreItem"],
        "type": "object",
        "properties": {
          "hasMoreItem": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "PlayerDto": {
        "required": ["playerId", "userName"],
        "type": "object",
        "properties": {
          "playerId": {
            "minLength": 1,
            "type": "string"
          },
          "userName": {
            "minLength": 1,
            "type": "string"
          },
          "color": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": {}
      },
      "TileDto": {
        "required": ["x", "y"],
        "type": "object",
        "properties": {
          "x": {
            "type": "integer",
            "format": "int32"
          },
          "y": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "UsernamesDto": {
        "type": "object",
        "properties": {
          "black": {
            "type": "string",
            "nullable": true
          },
          "white": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "Enter 'Bearer' [space] and then your token in the text input below.\r\n\r\nExample: \"Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9\"",
        "scheme": "Bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "tags": [
    {
      "name": "GameHub"
    }
  ]
}
