{
  "openapi": "3.0.1",
  "info": {
    "title": "Gomoku API v2.0",
    "description": "",
    "version": "2.0"
  },
  "paths": {
    "/api/v2/game/{gameId}": {
      "get": {
        "tags": ["Game"],
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "X-Version",
            "in": "header",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Game"
                }
              }
            }
          }
        }
      }
    },
    "/api/v2/games": {
      "get": {
        "tags": ["Game"],
        "parameters": [
          {
            "name": "X-Version",
            "in": "header",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/GetAvailableGamesResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v2/game": {
      "post": {
        "tags": ["Game"],
        "parameters": [
          {
            "name": "X-Version",
            "in": "header",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateGameRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateGameResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v2/game/{gameId}/join/{playerId}": {
      "post": {
        "tags": ["Game"],
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "playerId",
            "in": "path",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "X-Version",
            "in": "header",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/api/v2/game/{gameId}/make-move/{playerId}": {
      "post": {
        "tags": ["Game"],
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "playerId",
            "in": "path",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "X-Version",
            "in": "header",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MakeMoveRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PlaceTileResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v2/players": {
      "post": {
        "tags": ["Players"],
        "parameters": [
          {
            "name": "X-Version",
            "in": "header",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePlayerRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateGameRequest": {
        "type": "object",
        "properties": {
          "boardSize": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "CreateGameResponse": {
        "type": "object",
        "properties": {
          "gameId": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreatePlayerRequest": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "Game": {
        "type": "object",
        "properties": {
          "gameId": {
            "type": "string",
            "nullable": true,
            "readOnly": true
          },
          "playersMoves": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GameMove"
            },
            "nullable": true,
            "readOnly": true
          },
          "playerOne": {
            "$ref": "#/components/schemas/Player"
          },
          "playerTwo": {
            "$ref": "#/components/schemas/Player"
          },
          "hasBothPlayersJoined": {
            "type": "boolean",
            "readOnly": true
          },
          "isGameStarted": {
            "type": "boolean",
            "readOnly": true
          },
          "nextMoveShouldMakePlayerId": {
            "type": "string",
            "nullable": true,
            "readOnly": true
          },
          "winnerId": {
            "type": "string",
            "nullable": true,
            "readOnly": true
          },
          "winningSequence": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Tile"
            },
            "nullable": true,
            "readOnly": true
          }
        },
        "additionalProperties": false
      },
      "GameMove": {
        "type": "object",
        "properties": {
          "tile": {
            "$ref": "#/components/schemas/Tile"
          },
          "playerId": {
            "type": "string",
            "nullable": true
          },
          "moveNumber": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "GetAvailableGamesResponse": {
        "type": "object",
        "properties": {
          "gameId": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "MakeMoveRequest": {
        "type": "object",
        "properties": {
          "x": {
            "type": "integer",
            "format": "int32"
          },
          "y": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "PlaceTileResponse": {
        "type": "object",
        "properties": {
          "winningSequence": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Tile"
            },
            "nullable": true
          },
          "isWinningMove": {
            "type": "boolean",
            "readOnly": true
          }
        },
        "additionalProperties": false
      },
      "Player": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "Tile": {
        "type": "object",
        "properties": {
          "x": {
            "type": "integer",
            "format": "int32"
          },
          "y": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      }
    }
  }
}
