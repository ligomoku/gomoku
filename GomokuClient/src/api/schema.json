{
  "openapi": "3.0.1",
  "info": {
    "title": "Gomoku API v1.0",
    "description": "",
    "version": "1.0"
  },
  "paths": {
    "/api/game/{gameId}": {
      "get": {
        "tags": ["Game"],
        "summary": "Get information about game by game id",
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "X-Version",
            "in": "header",
            "style": "simple",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Information about game",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetGameResponse"
                }
              }
            }
          },
          "404": {
            "description": "Game by id not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                },
                "example": {
                  "type": "https://tools.ietf.org/html/rfc7231#section-6.5.4",
                  "title": "Not Found",
                  "status": 404
                }
              }
            }
          }
        }
      }
    },
    "/api/games": {
      "get": {
        "tags": ["Game"],
        "summary": "Get all games, which are available to join",
        "parameters": [
          {
            "name": "X-Version",
            "in": "header",
            "style": "simple",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns list of games which are available to join",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/GetAvailableGamesResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/game": {
      "post": {
        "tags": ["Game"],
        "summary": "Create new game",
        "parameters": [
          {
            "name": "X-Version",
            "in": "header",
            "style": "simple",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateGameRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returns information about new created game",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateGameResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                },
                "example": {
                  "type": "https://tools.ietf.org/html/rfc7231#section-6.5.1",
                  "title": "Bad Request",
                  "status": 400
                }
              }
            }
          }
        }
      }
    },
    "/api/game/{gameId}/join/{playerId}": {
      "post": {
        "tags": ["Game"],
        "summary": "Join game",
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "playerId",
            "in": "path",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "X-Version",
            "in": "header",
            "style": "simple",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Player with specified id successfully joined the game"
          },
          "404": {
            "description": "Game or player with specified id not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                },
                "example": {
                  "type": "https://tools.ietf.org/html/rfc7231#section-6.5.4",
                  "title": "Not Found",
                  "status": 404
                }
              }
            }
          }
        }
      }
    },
    "/api/game/{gameId}/make-move/{playerId}": {
      "post": {
        "tags": ["Game"],
        "summary": "Make move in a game",
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "playerId",
            "in": "path",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "X-Version",
            "in": "header",
            "style": "simple",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MakeMoveRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Move successfully made",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PlaceTileResponse"
                }
              }
            }
          },
          "400": {
            "description": "Required data is not provided",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                },
                "example": {
                  "type": "https://tools.ietf.org/html/rfc7231#section-6.5.1",
                  "title": "Bad Request",
                  "status": 400
                }
              }
            }
          },
          "404": {
            "description": "Game or player with specified id not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                },
                "example": {
                  "type": "https://tools.ietf.org/html/rfc7231#section-6.5.4",
                  "title": "Not Found",
                  "status": 404
                }
              }
            }
          }
        }
      }
    },
    "/api/players": {
      "post": {
        "tags": ["Players"],
        "summary": "Create new player",
        "parameters": [
          {
            "name": "X-Version",
            "in": "header",
            "style": "simple",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePlayerRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateGameRequest": {
        "required": ["boardSize"],
        "type": "object",
        "properties": {
          "boardSize": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "CreateGameResponse": {
        "required": ["gameId"],
        "type": "object",
        "properties": {
          "gameId": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "CreatePlayerRequest": {
        "required": ["id"],
        "type": "object",
        "properties": {
          "id": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "GameMoveDto": {
        "required": ["moveNumber", "playerId", "tile"],
        "type": "object",
        "properties": {
          "tile": {
            "$ref": "#/components/schemas/TileDto"
          },
          "playerId": {
            "minLength": 1,
            "type": "string"
          },
          "moveNumber": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "GetAvailableGamesResponse": {
        "required": ["gameId"],
        "type": "object",
        "properties": {
          "gameId": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "GetGameResponse": {
        "required": [
          "gameId",
          "hasBothPlayersJoined",
          "isGameStarted",
          "playersMoves"
        ],
        "type": "object",
        "properties": {
          "gameId": {
            "minLength": 1,
            "type": "string"
          },
          "playerOne": {
            "$ref": "#/components/schemas/PlayerDto"
          },
          "playerTwo": {
            "$ref": "#/components/schemas/PlayerDto"
          },
          "hasBothPlayersJoined": {
            "type": "boolean"
          },
          "isGameStarted": {
            "type": "boolean"
          },
          "nextMoveShouldMakePlayerId": {
            "type": "string",
            "nullable": true
          },
          "winnerId": {
            "type": "string",
            "nullable": true
          },
          "winningSequence": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TileDto"
            },
            "nullable": true
          },
          "playersMoves": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GameMoveDto"
            }
          }
        },
        "additionalProperties": false
      },
      "MakeMoveRequest": {
        "required": ["x", "y"],
        "type": "object",
        "properties": {
          "x": {
            "type": "integer",
            "format": "int32"
          },
          "y": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "PlaceTileResponse": {
        "type": "object",
        "properties": {
          "winningSequence": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TileDto"
            },
            "nullable": true
          },
          "isWinningMove": {
            "type": "boolean",
            "readOnly": true
          }
        },
        "additionalProperties": false
      },
      "PlayerDto": {
        "required": ["playerId"],
        "type": "object",
        "properties": {
          "playerId": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": {}
      },
      "TileDto": {
        "required": ["x", "y"],
        "type": "object",
        "properties": {
          "x": {
            "type": "integer",
            "format": "int32"
          },
          "y": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      }
    }
  }
}
