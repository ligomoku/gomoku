{
  "name": "@gomoku/root",
  "private": true,
  "version": "0.0.1",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint --filter=@gomoku/core --filter=@gomoku/utils",
    "typecheck": "turbo run typecheck --filter=@gomoku/utils --filter=@gomoku/core",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "storybook": "yarn workspace @gomoku/core storybook",
    "clean": "find . -name node_modules -type d -prune -exec rm -rf '{}' + && find . -name .turbo -type d -prune -exec rm -rf '{}' + && find . -name dist -type d -prune -exec rm -rf '{}' +"
  },
  "devDependencies": {
    "@gomoku/eslint-config-custom": "workspace:^0.0.1",
    "@gomoku/typescript-config": "workspace:^0.0.1",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "turbo": "^2.1.2",
    "typescript": "^5.6.2"
  },
  "packageManager": "yarn@4.5.0"
}
